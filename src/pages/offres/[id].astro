---
import { getOffre } from '../../backend.mjs';
import Layout from '../../layouts/Layout.astro';

const { id } = Astro.params;
const offre = await getOffre(id);
---

<Layout titre={offre.nomMaison}>
    <h2>{offre.nomMaison}</h2>
    <ul>
        <li>Adresse: {offre.adresse}</li>
        <li>Prix: {offre.Prix} €</li>
        <li>Surface: {offre.Superficie} m²</li>
        <li>Nombre de chambre: {offre.nb_chambre}</li>
        <li>Nombre de salle de bains: {offre.nb_salle_de_bain}</li>
    </ul>
</Layout>